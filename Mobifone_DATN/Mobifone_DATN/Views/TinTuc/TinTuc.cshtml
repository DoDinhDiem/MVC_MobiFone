
@{
    ViewData["Title"] = "TinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="TinTucCtrl" id="content" class="content-area page-wrapper" role="main">
    <div class="row row-main">
        <div class="large-12 col">
            <div class="col-inner">
                <div id="row-520056281"
                     class="row large-columns-2 medium-columns-1 small-columns-1 row-full-width has-shadow row-box-shadow-2 row-masonry"
                     data-packery-options='{"itemSelector": ".col", "gutter": 0, "presentageWidth" : true}'>

                    <div class="col post-item" ng-repeat="item in searchResults">
                        <div class="col-inner">
                            <a href="/tinTucDetail/{{item.id}}" class="plain">
                                <div class="box box-text-bottom box-blog-post has-hover">
                                    <div class="box-image">
                                        <div class="image-cover" style="padding-top:50%;">
                                            <img fetchpriority="high" decoding="async" width="300"
                                                 height="286"
                                                 src="~/Uploads/TinTuc/{{item.image}}"
                                                 class="attachment-medium size-medium wp-post-image" alt=""
                                                 sizes="(max-width: 300px) 100vw, 300px" />
                                        </div>
                                    </div>
                                    <div class="box-text text-center">
                                        <div class="box-text-inner blog-post-inner">

                                            <h5 class="post-title is-xlarge ">
                                                {{item.tieuDe}}
                                            </h5>
                                            <div class="post-meta is-small op-8">
                                                {{item.createdAt | date: 'dd/MM/yyyy'}}

                                            </div>
                                            <div class="is-divider"></div>
                                            <p class="from_the_blog_excerpt " ng-bind-html="trustAsHtml(item.noiDung)">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    <a href="#" ng-click="currentPage = 1">&laquo;</a>
                    <a href="#" ng-repeat="page in getPages()" ng-class="{ 'active': currentPage === page }" ng-click="setCurrentPage(page)">
                        {{ page }}
                    </a> <a href="#" ng-click="currentPage = totalPages">&raquo;</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AngularJS/Client/TinTuc.js"></script>
}
